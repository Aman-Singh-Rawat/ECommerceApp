<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/bg_forgot_pass_sms_corner_radius"/>
            <stroke
                android:width="@dimen/bg_forgot_pass_sms_stroke_selected_width"
                android:color="@color/off_black"/>
        </shape>
    </item>
    <item android:state_selected="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/bg_forgot_pass_sms_corner_radius"/>
            <stroke
                android:width="@dimen/bg_forgot_pass_sms_stroke_not_selected_width"
                android:color="@color/very_light_gray"/>
        </shape>
    </item>


</selector>