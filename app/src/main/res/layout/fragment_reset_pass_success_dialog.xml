<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presenter.screen.fragment.resetpassword.ResetPassSuccessDialogFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/reset_pass_card_view_width"
        android:layout_height="@dimen/reset_pass_card_view_height"
        android:layout_gravity="center"
        app:cardCornerRadius="@dimen/reset_pass_card_corner_radius"
        app:cardElevation="@dimen/reset_pass_card_elevation"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="@color/white"
        style="@style/Widget.Material3.CardView.Filled"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/reset_pass_constraint_padding_top">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/glResetPassDialogStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.05" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/glResetPassDialogEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.95" />

            <FrameLayout
                android:id="@+id/flCongratulation"
                android:layout_width="@dimen/fl_congratulation_width_height"
                android:layout_height="@dimen/fl_congratulation_width_height"
                android:layout_marginTop="@dimen/fl_congratulation_margin_top"
                android:background="@drawable/bg_reset_pass_congratulation_img"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                        <!--    TODO CHANGING THIS IMAGE FROM HERE     -->
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgCongratulation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    android:src="@drawable/img_shield" />

            </FrameLayout>

            <View
                android:id="@+id/view"
                android:layout_width="@dimen/view_width_height"
                android:layout_height="@dimen/view_width_height"
                android:layout_marginEnd="@dimen/view_margin_end"
                android:background="@drawable/bg_reset_pass_congratulation_img"
                app:layout_constraintEnd_toStartOf="@+id/flCongratulation"
                app:layout_constraintTop_toBottomOf="@+id/view9" />

            <View
                android:id="@+id/view2"
                android:layout_width="@dimen/view2_width_height"
                android:layout_height="@dimen/view2_width_height"
                android:layout_marginTop="@dimen/view2_margin_top"
                android:background="@drawable/bg_reset_pass_congratulation_img"
                app:layout_constraintEnd_toEndOf="@+id/view"
                app:layout_constraintStart_toStartOf="@+id/view"
                app:layout_constraintTop_toBottomOf="@id/view" />

            <View
                android:id="@+id/view3"
                android:layout_width="@dimen/view3_width_height"
                android:layout_height="@dimen/view3_width_height"
                android:layout_marginStart="@dimen/view3_margin_start"
                android:layout_marginTop="@dimen/view3_margin_top"
                android:background="@drawable/bg_reset_pass_congratulation_img"
                app:layout_constraintEnd_toStartOf="@+id/view2"
                app:layout_constraintTop_toBottomOf="@id/view2" />

            <View
                android:id="@+id/view4"
                android:layout_width="@dimen/view4_width_height"
                android:layout_height="@dimen/view4_width_height"
                android:layout_marginTop="@dimen/view4_margin_top"
                android:background="@drawable/bg_reset_pass_congratulation_img"
                app:layout_constraintBottom_toBottomOf="@+id/view5"
                app:layout_constraintEnd_toEndOf="@id/view3"
                app:layout_constraintStart_toEndOf="@+id/view3"
                app:layout_constraintTop_toBottomOf="@id/view3" />

            <View
                android:id="@+id/view5"
                android:layout_width="@dimen/view5_width_height"
                android:layout_height="@dimen/view5_width_height"
                android:layout_marginStart="@dimen/view5_margin_start"
                android:layout_marginTop="@dimen/view5_margin_top"
                android:background="@drawable/bg_reset_pass_congratulation_img"
                app:layout_constraintEnd_toEndOf="@+id/flCongratulation"
                app:layout_constraintStart_toEndOf="@id/view4"
                app:layout_constraintTop_toBottomOf="@+id/flCongratulation" />

            <View
                android:id="@+id/view6"
                android:layout_width="@dimen/view6_width_height"
                android:layout_height="@dimen/view6_width_height"
                android:layout_marginStart="@dimen/view6_margin_start"
                android:background="@drawable/bg_reset_pass_congratulation_img"
                app:layout_constraintBottom_toBottomOf="@+id/flCongratulation"
                app:layout_constraintStart_toEndOf="@+id/view5" />


            <View
                android:id="@+id/view7"
                android:layout_width="@dimen/view7_width_height"
                android:layout_height="@dimen/view7_width_height"
                android:layout_marginStart="@dimen/view7_margin_start"
                android:layout_marginBottom="@dimen/view7_margin_bottom"
                android:background="@drawable/bg_reset_pass_congratulation_img"
                app:layout_constraintBottom_toTopOf="@+id/view6"
                app:layout_constraintStart_toEndOf="@+id/flCongratulation" />

            <View
                android:id="@+id/view8"
                android:layout_width="@dimen/view8_width_height"
                android:layout_height="@dimen/view8_width_height"
                android:background="@drawable/bg_reset_pass_congratulation_img"
                app:layout_constraintStart_toEndOf="@+id/view7"
                app:layout_constraintTop_toTopOf="@+id/flCongratulation" />

            <View
                android:id="@+id/view9"
                android:layout_width="@dimen/view9_width_height"
                android:layout_height="@dimen/view9_width_height"
                android:background="@drawable/bg_reset_pass_congratulation_img"
                app:layout_constraintBottom_toTopOf="@id/flCongratulation"
                app:layout_constraintEnd_toEndOf="@id/flCongratulation"
                app:layout_constraintStart_toStartOf="@id/flCongratulation"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvCongratulations"
                android:layout_width="@dimen/views_width"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/tv_congratulation_text_size"
                android:letterSpacing="0.01"
                android:layout_marginTop="@dimen/tv_congratulation_margin_top"
                android:textColor="@color/off_black"
                app:fontFamily="@font/poppins_semibold"
                android:text="@string/congratulations"
                app:layout_constraintTop_toBottomOf="@id/view5"
                app:layout_constraintEnd_toEndOf="@id/glResetPassDialogEnd"
                app:layout_constraintStart_toStartOf="@id/glResetPassDialogStart" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvYourAccount"
                android:layout_width="@dimen/views_width"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/tv_your_account_margin_top"
                android:fontFamily="@font/poppins"
                android:letterSpacing="0.01"
                android:text="@string/your_account_is_ready"
                android:textAlignment="center"
                android:textColor="@color/off_black"
                android:textSize="@dimen/select_which_text_size"
                app:layout_constraintEnd_toEndOf="@id/glResetPassDialogEnd"
                app:layout_constraintStart_toStartOf="@id/glResetPassDialogStart"
                app:layout_constraintTop_toBottomOf="@+id/tvCongratulations" />

            <ProgressBar
                style="@style/Widget.Material3.CircularProgressIndicator.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/progress_bar_margin_top"
                android:indeterminate="true"
                android:indeterminateTint="@color/off_black"
                app:layout_constraintEnd_toEndOf="@id/glResetPassDialogEnd"
                app:layout_constraintStart_toStartOf="@id/glResetPassDialogStart"
                app:layout_constraintTop_toBottomOf="@id/tvYourAccount" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
