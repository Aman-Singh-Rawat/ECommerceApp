<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgViewPager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:layout_marginBottom="@dimen/view_pager_margin_bottom"
        android:src="@drawable/img_onboarding_three"
        app:layout_constraintBottom_toTopOf="@+id/tvOnboardingText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvOnboardingText"
        android:layout_width="@dimen/views_width"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/we_provide_high_quality_products_just_for_you"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="@dimen/onboarding_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="@dimen/onboarding_text_margin_start_end"/>

</androidx.constraintlayout.widget.ConstraintLayout>